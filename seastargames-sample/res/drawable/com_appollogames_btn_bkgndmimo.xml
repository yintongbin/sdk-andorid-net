<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffffff" />
            <stroke
                android:width="3dp"
                android:color="#bf0099cc" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
	<item android:state_activated="true">
        <shape>
            <solid
                android:color="#7ff3ae1b" />
            <stroke
                android:width="1dp"
                android:color="#7FF87217" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
	</item>
    <item>
        <shape>
            <solid
                android:color="#ffffffff" />
            <stroke
                android:width="1dp"
                android:color="#7FF87217" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

